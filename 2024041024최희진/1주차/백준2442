#include<iostream>
#include<string>
#include<sstream>
using std::cout;
using std::cin;
using std::string;
int main() {
	int T;
	cin >> T;
	for (int i = 0; i <T; i++) {	
		for (int j = 0; j < T-i-1; j++) {
			cout << " ";
		}
		for (int j = 0; j < 2 * i + 1; j++) {
			cout << "*";
		}
		cout << "\n";
	}

	return 0;
}
